@model List<Document>
<h2>For Signature Documents</h2>
<div class="row">
  
</div>
<hr />
<div class="row">

    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        DocId
                    </th>
                    <th>
                        Filename
                    </th>
                    <th>
                        Status
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
            @if(Model != null)
            {
                foreach(var item in Model)
                {
                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td>
                            @item.Filename
                        </td>
                        <td>
                            @item.Status
                        </td>
                        <td>
                            @if (item.Status != "Signed")
                            {
                                <a asp-action="UpdateSignatures" asp-route-Id="@item.Id">Update Signature</a>
                            }

                        </td>
                    </tr>
                }
            }

            </tbody>
        </table>
    </div>
</div>