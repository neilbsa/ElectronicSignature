@model DocumentElementCoordinates

@{
    Layout = null;
}



<div class="mainSignatureContainer">
    <div class="row mainSignatureHeader" style="width:250px; height:25px;border-right-color:darkblue;border:solid;border-width:1px;background-color:darkblue">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

           
                <span data-transactionid="@Model.Id" class="deleteSignatureSpan">
                    <svg class="bi bi-x-square-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="red" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M2 0a2 2 0 00-2 2v12a2 2 0 002 2h12a2 2 0 002-2V2a2 2 0 00-2-2H2zm9.854 4.854a.5.5 0 00-.708-.708L8 7.293 4.854 4.146a.5.5 0 10-.708.708L7.293 8l-3.147 3.146a.5.5 0 00.708.708L8 8.707l3.146 3.147a.5.5 0 00.708-.708L8.707 8l3.147-3.146z" clip-rule="evenodd" />
                    </svg>
                </span>
  
        
        </div>
    </div>


    <div class="row"  style="width:250px; height:50px;border-right-color:black;border:solid;border-width:2px">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <form asp-action="SaveCoordinate" method="post">
                <input class="elemId" type="hidden" asp-for="Id" />
                <input class="elemType" type="hidden" asp-for="ElementType" />
                <input class="elemSignatoryId" type="hidden" asp-for="SignatoryId" />
                <input class="elemPageX" type="hidden" asp-for="PageX" />
                <input class="elemPageY" type="hidden" asp-for="PageY" />
                <input class="elemPageNumber" type="hidden" asp-for="PageNumber" />
            </form>
            <div class="signatureElement systemElement forupdateSignatureView" style="width:250px; height:50px;background-color:yellow;color:red;opacity:0.0">


            </div>
            <div class="signatureCover forupdateSignatureCover" style="width:250px; height:50px;background-image:url('@Model.base64signature');background-size:cover">

            </div>
        </div>
    </div>




</div>










